<Window x:Class="testbd.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="300" Width="400">
    <Grid>
        <Label Content="Имя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,30,0,0"/>
        <TextBox Name="NameTextBox" HorizontalAlignment="Left" Margin="120,30,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,80,0,0"/>
        <TextBox Name="EmailTextBox" HorizontalAlignment="Left" Margin="120,80,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,130,0,0"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" Margin="120,130,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="120,180,0,0" VerticalAlignment="Top" Width="150" Click="RegisterButton_Click"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="280,180,0,0" VerticalAlignment="Top" Width="80" Click="BackButton_Click"/>
    </Grid>
</Window>
